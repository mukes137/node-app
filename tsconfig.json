{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017"],
    "types": ["node", "jest"],
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/config/*": ["./src/config/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/presenters/*": ["./src/presenters/*"],
      "@/repositories/*": ["./src/repositories/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/services/*": ["./src/services/*"],
      "@/types/*": ["./src/types/*"],
      "@/test/*": ["./test/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
