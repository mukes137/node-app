---
extends: default

rules:
  # Limit line length for readability
  line-length:
    max: 250
    level: warning

  # consistent spacing around colons
  braces:
    { level: warning }

  # consistent spacing around brackets
  brackets:
    { level: warning }

  # Disallow documents without a YAML document start marker (---)
  document-start: { level: error }

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

ignore: |
  .github/ansible.yml
  .cache
  tests/**/inventory/*.yml

braces:
  forbid: false
  min-spaces-inside: 1
  max-spaces-inside: 1
  min-spaces-inside-empty: -1
  max-spaces-inside-empty: -1
