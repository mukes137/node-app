---
skip_list:
 - 'ansible-lint.skip_ansible_lint'
 - 'ansible-lint.skip_ansible_lint_2'
 - 'ansible-lint.skip_ansible_lint_3'
 - 'yaml[line-length]'

rulesdir:
 - ./custom_rules/

exclude_paths:
 - 'roles/example_role/tasks/main.yml'

# rules designed to be used for different stages of environment
profile: null

# Specify the verbosity level for the linting output
verbosity: 1
